<%= form_with model: category do |form| %>
  <% if @category.errors %>
    
      <% @category.errors.full_messages.each do |category| %>
        <li class="alert alert-danger" role="alert"> <%= category %> </li> 
      <% end %>
    
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class:'form-label' %>
    <%= form.text_field :name, class:'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.submit class:'btn btn-success' %>
   
  </div>
  
<% end %>
